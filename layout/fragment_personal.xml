<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="تعديل البيانات"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <EditText
            android:id="@+id/fragment_my_profile_et_name"
            style="@style/EditTextStyle"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="3dp"
            android:hint="@string/name2"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/fragment_my_profile_et_email"
            style="@style/EditTextStyle"
            android:drawableStart="@drawable/ic_mail"
            android:drawablePadding="10dp"
            android:hint="@string/email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/fragment_my_profile_et_date_birth"
            style="@style/EditTextStyle"
            android:cursorVisible="false"
            android:drawableStart="@drawable/ic_calender"
            android:drawablePadding="10dp"
            android:hint="@string/date_of_birth"
            android:importantForAutofill="no"
            android:inputType="date" />

        <Spinner
            android:id="@+id/fragment_my_profile_spin_blood_type"
            style="@style/SpinnerStyle"
            />

        <EditText
            android:id="@+id/fragment_my_profile_et_donation_date"
            style="@style/EditTextStyle"
            android:drawableStart="@drawable/ic_calender"
            android:drawablePadding="10dp"
            android:hint="@string/last_donation_date"
            android:importantForAutofill="no"
            android:inputType="date" />

        <Spinner
            android:id="@+id/fragment_my_profile_spin_governorate"
            style="@style/SpinnerStyle"
            />

        <Spinner
            android:id="@+id/fragment_my_profile_spin_city"
            style="@style/SpinnerStyle"
            />

        <EditText
            android:id="@+id/fragment_my_profile_et_phone_no"
            style="@style/EditTextStyle"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:hint="@string/phone_no"
            android:importantForAutofill="no"
            android:inputType="phone" />

        <EditText
            android:id="@+id/fragment_my_profile_et_password"
            style="@style/EditTextStyle"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:hint="@string/password"
            android:importantForAutofill="no"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/fragment_my_profile_et_password_confirm"
            style="@style/EditTextStyle"
            android:layout_marginBottom="30dp"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:hint="@string/password_confirm"
            android:importantForAutofill="no"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/fragment_my_profile_update_btn"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_60sdp"
            style="@style/ButtonStyle"
            android:text="@string/edit"
            />


    </LinearLayout>

</ScrollView>
