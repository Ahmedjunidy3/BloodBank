<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/login_background">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/login_screen_logo"
            android:contentDescription="iv logo"
            />

        <EditText
            android:id="@+id/pin_code_et_frag_new_pass"
            style="@style/EditTextStyle"
            android:layout_marginTop="50dp"
            android:importantForAutofill="no"
            android:inputType="number"
            android:hint="كود التحقق"
            />

        <EditText
            android:id="@+id/new_pass_et_frag_new_pass"
            style="@style/EditTextStyle"
            android:layout_marginTop="25dp"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:hint="كلمه المرور الجديدة"
            />

        <EditText
            android:id="@+id/pass_confirm_et_frag_new_pass"
            style="@style/EditTextStyle"
            android:layout_marginTop="25dp"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:hint="تأكيد كلمه المرور الجديدة"
            />

        <Button
            android:id="@+id/change_btn_frag_new_pass"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/cornered_btn"
            android:backgroundTint="@color/colorGray"
            android:text="@string/change"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>